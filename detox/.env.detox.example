# Detox E2E Test Configuration
# Copy this file to .env in the detox directory and fill in your values

# Test Server URLs
SITE_1_URL=https://your-test-server-1.example.com
SITE_2_URL=https://your-test-server-2.example.com
SITE_3_URL=https://your-test-server-3.example.com

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password

# SMTP Configuration (for email testing)
SMTP_URL=http://127.0.0.1:9001

# LDAP Configuration (optional)
LDAP_SERVER=127.0.0.1
LDAP_PORT=389

# Claude AI Integration (optional - for AI-assisted testing)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Test Execution Configuration
# Set to true when running in CI environment
CI=false

# Platform: 'ios' or 'android'
IOS=true

# Device Configuration (iOS)
DEVICE_NAME=iPhone 15 Pro
DEVICE_OS_VERSION=iOS 17.2

# Device Configuration (Android)
AVD_NAME=detox_pixel_4_xl_api_34
SDK_VERSION=34

# Detox Configuration
DETOX_LOGLEVEL=info
DETOX_RETRIES=0

# Test Reporting (optional)
DETOX_AWS_S3_BUCKET=
DETOX_AWS_ACCESS_KEY_ID=
DETOX_AWS_SECRET_ACCESS_KEY=

# Zephyr Test Management Integration (optional)
ZEPHYR_ENABLE=false
ZEPHYR_API_KEY=
ZEPHYR_FOLDER_ID=
JIRA_PROJECT_KEY=MM

# Webhook for test notifications (optional)
WEBHOOK_URL=

# Test Environment Flag
RUNNING_E2E=true
